namespace App\Repositories\Contracts;

interface RepositoryInterface
{
    /**
     * 创建新的数据
     *
     * @param array $data
     * @return mixed
     */
    public function create(array $data);

    /**
     * 更新数据
     *
     * @param $id
     * @param array $data
     * @return mixed
     */
    public function update($id, array $data);

    /**
     * 删除数据
     *
     * @param $id
     * @return mixed
     */
    public function delete($id);

}